<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/rr_lockscreen_title" >

       <PreferenceScreen
        android:key="rr_ls_security"
        android:icon="@drawable/rr_security_icon"
        android:title="@string/rr_ls_security"
        android:summary="@string/rr_ls_security_summary"
        android:fragment="com.android.settings.rr.LockScreenSecurity" />

        <PreferenceScreen
         android:key="rr_ls_ui"
         android:title="@string/rr_ls_ui"
         android:fragment="com.android.settings.rr.LockScreenUI"
         android:summary="@string/lockscreen_weather_summary"
         android:icon="@drawable/rr_ls_ui_icon" />

        <PreferenceScreen
         android:key="rr_ls_weather"
         android:title="@string/weather_title"
         android:fragment="com.android.settings.rr.LockScreenWeather"
         android:summary="@string/lockscreen_weather_summary"
         android:icon="@drawable/rr_ls_weather_icon" />

    <Preference
        android:key="bottom_shortcuts_category"
            android:title="@string/rr_lockscreen_target_title"
            android:icon="@drawable/rr_bottom_shortcuts_icon"
            android:summary="@string/lockscreen_targets_summary">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.android.systemui"
            android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
    </Preference>


        <PreferenceScreen
                 android:key="lockscreen_shortcuts"
                 android:fragment="com.android.settings.rr.dslv.ActionListViewSettings"
                 android:summary="@string/lockscreen_shortcuts_summary"
                 android:icon="@drawable/rr_ls_shortcuts_icon"
                 android:title="@string/lockscreen_shortcuts_title">
             <extra android:name="actionMode" android:value="4" />
             <extra android:name="maxAllowedActions" android:value="20" />
             <extra android:name="disableLongpress" android:value="true" />
             <extra android:name="useAppPickerOnly" android:value="true" />
             <extra android:name="fragment" android:value="com.android.settings.rr.fragments.LockscreenShortcutFragment" />
        </PreferenceScreen>

    <com.rr.settings.preferences.SecureSettingSwitchPreference
        android:key="face_auto_unlock"
        android:title="@string/face_auto_unlock_title"
        android:summary="@string/face_auto_unlock_summary"
        android:defaultValue="false" />


</PreferenceScreen>

